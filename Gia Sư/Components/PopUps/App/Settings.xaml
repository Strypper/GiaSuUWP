<ContentDialog
    x:Class="Gia_Sư.Components.PopUps.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gia_Sư.Components.PopUps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CÀI ĐẶT"
    PrimaryButtonText="ÁP DỤNG"
    SecondaryButtonText="TÌM HIỂU"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <Grid>
            <FontIcon x:Name="Gear" Glyph="&#xF8B0;" FontSize="400"
                  VerticalAlignment="Center" Foreground="#f0e68c"
                  HorizontalAlignment="Center"/>
            <Border VerticalAlignment="Center"
                HorizontalAlignment="Center" Background="#ffc402"
                Width="200" Height="250" CornerRadius="10">
                <TextBlock Text="T" FontWeight="ExtraBold" Foreground="White"
                       FontSize="200" HorizontalAlignment="Center"
                       VerticalAlignment="Center" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</ContentDialog>
