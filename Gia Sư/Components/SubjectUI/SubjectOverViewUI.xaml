                            </Interactivity:Interaction.Behaviors>
        </TextBlock>
        <TextBlock Text="{x:Bind data.UserName, Mode=OneTime}" FontSize="20" Foreground="DarkGray" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,50,0,0" Grid.Column="1" Grid.Row="1">
